{% extends 'base.html.twig' %}

{% block title %}Se connecter - Sortir.com{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gradient-to-br from-purple-100 via-purple-50 to-white flex items-center justify-center px-4 py-12 relative">
        <div class="absolute inset-0 overflow-hidden">
            <div class="absolute top-10 left-10 text-xl animate-pulse opacity-40">üéâ</div>
            <div class="absolute top-20 right-20 text-lg animate-bounce opacity-40">üìç</div>
            <div class="absolute bottom-20 left-20 text-xl animate-pulse opacity-40" style="animation-delay: 1s;">üçª</div>
            <div class="absolute bottom-40 right-10 text-lg animate-bounce opacity-40" style="animation-delay: 2s;">‚ú®</div>
            <div class="absolute top-1/4 left-1/4 w-40 h-40 bg-purple-600/10 rounded-full blur-2xl"></div>
            <div class="absolute bottom-1/4 right-1/4 w-60 h-60 bg-purple-600/8 rounded-full blur-3xl"></div>
            <div class="absolute top-1/2 right-1/3 w-32 h-32 bg-purple-400/12 rounded-full blur-xl"></div>
        </div>

        <div class="relative z-10 w-full max-w-md">
            <div class="text-center mb-8 p-4 bg-white/60 backdrop-blur-sm rounded-xl shadow-lg border border-purple-600/10">
                <h1 class="text-3xl font-bold text-gray-900 mb-2">
                    Bon retour ! üëã
                </h1>
                <p class="text-gray-600">
                    Connectez-vous pour voir vos sorties
                </p>
            </div>

            <div class="bg-white/90 backdrop-blur-sm border border-purple-600/20 rounded-2xl shadow-2xl shadow-purple-600/10 p-8">
                <form method="post" class="space-y-6">
                    {% if error %}
                        <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg text-sm flex items-center gap-2 shadow-sm">
                            <span class="text-lg">‚ö†Ô∏è</span>
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    <div class="space-y-2">
                        <label for="username" class="block text-sm font-medium text-gray-700">
                            Email ou pseudo
                        </label>
                        <input type="text"
                               value="{{ last_username }}"
                               name="_username"
                               id="username"
                               class="w-full px-4 py-3 border border-purple-600/30 rounded-lg focus:ring-2 focus:ring-purple-600 focus:border-purple-600 transition-all outline-none text-gray-900 placeholder-gray-500 bg-white shadow-sm focus:shadow-md"
                               placeholder="votre@email.com ou pseudo"
                               autocomplete="email"
                               required
                               autofocus>
                    </div>

                    <div class="space-y-2">
                        <label for="password" class="block text-sm font-medium text-gray-700">
                            Mot de passe
                        </label>
                        <input type="password"
                               name="_password"
                               id="password"
                               class="w-full px-4 py-3 border border-purple-600/30 rounded-lg focus:ring-2 focus:ring-purple-600 focus:border-purple-600 transition-all outline-none text-gray-900 placeholder-gray-500 bg-white shadow-sm focus:shadow-md"
                               placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢"
                               autocomplete="current-password"
                               required>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="flex items-center">
                        <input type="checkbox"
                               name="_remember_me"
                               id="_remember_me"
                               class="w-4 h-4 text-purple-600 border-purple-600/40 rounded focus:ring-purple-600">
                        <label for="_remember_me" class="ml-2 block text-sm text-gray-700">
                            Se souvenir de moi
                        </label>
                    </div>

                    <button type="submit"
                            class="w-full bg-purple-600 text-white font-semibold py-3 rounded-lg hover:bg-purple-700 transition-all duration-200 hover:scale-[1.02] shadow-lg hover:shadow-xl shadow-purple-600/30">
                        Se connecter üöÄ
                    </button>
                </form>

                <div class="mt-6 relative">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-purple-600/20"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                        <span class="px-3 bg-white text-gray-500">ou</span>
                    </div>
                </div>

                <div class="mt-6">
                    <a href="{{ path('app_register') }}"
                       class="w-full block text-center px-4 py-3 border-2 border-purple-600 text-purple-600 font-semibold rounded-lg hover:bg-purple-600 hover:text-white transition-all duration-200 hover:scale-[1.02] bg-white shadow-md hover:shadow-lg">
                        Cr√©er un compte ‚ú®
                    </a>
                </div>

                <div class="mt-6 text-center text-sm text-gray-600">
                    <a href="{{ path('app_forgot_password_request') }}" class="hover:text-purple-600 transition-colors">
                        Mot de passe oubli√© ?
                    </a>
                </div>
            </div>

            <div class="mt-8 text-center text-sm text-gray-500 p-3 bg-white/40 backdrop-blur-sm rounded-lg shadow-sm border border-purple-600/10">
                <p>
                    En vous connectant, vous acceptez nos
                    <a href="#" class="text-purple-600 hover:underline">conditions d'utilisation</a>
                </p>
            </div>
        </div>
    </div>
{% endblock %}
