{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié - Sortir.com{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gradient-to-br from-purple-100 via-purple-50 to-white flex items-center justify-center px-4 py-12 relative">
        <div class="absolute inset-0 overflow-hidden">
            <div class="absolute top-10 left-10 text-xl animate-pulse opacity-40">🔑</div>
            <div class="absolute top-20 right-20 text-lg animate-bounce opacity-40">💭</div>
            <div class="absolute bottom-20 left-20 text-xl animate-pulse opacity-40" style="animation-delay: 1s;">✉️</div>
            <div class="absolute bottom-40 right-10 text-lg animate-bounce opacity-40" style="animation-delay: 2s;">🔒</div>
            <div class="absolute top-1/4 left-1/4 w-40 h-40 bg-purple-600/10 rounded-full blur-2xl"></div>
            <div class="absolute bottom-1/4 right-1/4 w-60 h-60 bg-purple-600/8 rounded-full blur-3xl"></div>
            <div class="absolute top-1/2 right-1/3 w-32 h-32 bg-purple-400/12 rounded-full blur-xl"></div>
        </div>

        <div class="relative z-10 w-full max-w-md">
            <div class="text-center mb-8 p-4 bg-white/60 backdrop-blur-sm rounded-xl shadow-lg border border-purple-600/10">
                <h1 class="text-3xl font-bold text-gray-900 mb-2">
                    Mot de passe oublié ? 🔐
                </h1>
                <p class="text-gray-600">
                    Pas de panique, on va vous aider !
                </p>
            </div>

            <div class="bg-white/90 backdrop-blur-sm border border-purple-600/20 rounded-2xl shadow-2xl shadow-purple-600/10 p-8">
                {% for flash_error in app.flashes('reset_password_error') %}
                    <div class="mb-6 bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg text-sm flex items-center gap-2 shadow-sm">
                        <span class="text-lg">⚠️</span>
                        {{ flash_error }}
                    </div>
                {% endfor %}

                {% if app.request.query.get('checkEmail') %}
                    <div class="mb-6 bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-lg text-sm flex items-center gap-2 shadow-sm">
                        <span class="text-lg">✅</span>
                        Un email vous a été envoyé avec les instructions de réinitialisation.
                    </div>
                {% endif %}

                {{ form_start(requestForm, {'attr': {'class': 'space-y-6'}}) }}
                <div class="space-y-2">
                    {{ form_label(requestForm.email, 'Adresse email', {
                        'label_attr': {'class': 'block text-sm font-medium text-gray-700'}
                    }) }}
                    {{ form_widget(requestForm.email, {
                        'attr': {
                            'class': 'w-full px-4 py-3 border border-purple-600/30 rounded-lg focus:ring-2 focus:ring-purple-600 focus:border-purple-600 transition-all outline-none text-gray-900 placeholder-gray-500 bg-white shadow-sm focus:shadow-md',
                            'placeholder': 'votre@email.com'
                        }
                    }) }}
                    {{ form_errors(requestForm.email) }}
                </div>

                <div class="bg-purple-50 border border-purple-200 rounded-lg p-4">
                    <p class="text-sm text-purple-700 flex items-start gap-2">
                        <span class="text-lg">💡</span>
                        <span>Entrez votre adresse email et nous vous enverrons un lien pour réinitialiser votre mot de passe.</span>
                    </p>
                </div>

                <button type="submit"
                        class="w-full bg-purple-600 text-white font-semibold py-3 rounded-lg hover:bg-purple-700 transition-all duration-200 hover:scale-[1.02] shadow-lg hover:shadow-xl shadow-purple-600/30">
                    Envoyer le lien de réinitialisation 📧
                </button>
                {{ form_end(requestForm) }}

                <div class="mt-6 text-center">
                    <a href="{{ path('app_login') }}"
                       class="inline-flex items-center gap-2 text-sm text-purple-600 hover:text-purple-700 transition-colors font-medium">
                        <span>←</span>
                        Retour à la connexion
                    </a>
                </div>
            </div>

            <div class="mt-8 text-center text-sm text-gray-500 p-3 bg-white/40 backdrop-blur-sm rounded-lg shadow-sm border border-purple-600/10">
                <p>
                    Vous n'avez pas encore de compte ?
                    <a href="{{ path('app_register') }}" class="text-purple-600 hover:underline font-medium">Créer un compte</a>
                </p>
            </div>
        </div>
    </div>
{% endblock %}
