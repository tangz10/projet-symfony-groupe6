<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">

    {# Alpine.js #}
    <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>

    {% block stylesheets %}{% endblock %}
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>

    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>

<body class="min-h-dvh flex flex-col bg-gray-100 overflow-x-hidden" x-data="{ mobileMenu: false }">
{% set current_route = app.request.attributes.get('_route') %}

{% if current_route not in ['app_login', 'app_register'] %}
    <nav class="bg-white border-b border-gray-100 fixed w-full top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="relative flex justify-between h-16">
                <!-- Logo -->
                <div class="flex-shrink-0 flex items-center">
                    <a href="{{ path('app_index') }}" class="flex items-center space-x-2">
                        <svg class="w-8 h-8 text-purple-600" viewBox="0 0 24 24" fill="none">
                            <path d="M8 7V3M16 7V3M7 11H17M5 21H19C20.1046 21 21 20.1046 21 19V7C21 5.89543 20.1046 5 19 5H5C3.89543 5 3 5.89543 3 7V19C3 20.1046 3.89543 21 5 21Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                        <span class="hidden md:block text-lg font-semibold text-gray-900">Sortir.com</span>
                    </a>
                </div>

                <!-- Navigation principale -->
                <div class="hidden md:flex md:items-center md:space-x-8">
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('app_sortie_index') }}"
                           class="px-3 py-2 text-sm font-medium text-gray-700 hover:text-purple-600 border-b-2 {% if app.request.get('_route') starts with 'app_sortie' %}border-purple-600 text-purple-600{% else %}border-transparent{% endif %} transition-colors">
                            Sorties
                        </a>
                        <a href="{{ path('app_ville_index') }}"
                           class="px-3 py-2 text-sm font-medium text-gray-700 hover:text-purple-600 border-b-2 {% if app.request.get('_route') starts with 'app_ville' %}border-purple-600 text-purple-600{% else %}border-transparent{% endif %} transition-colors">
                            Villes
                        </a>
                        <a href="{{ path('app_lieu_index') }}"
                           class="px-3 py-2 text-sm font-medium text-gray-700 hover:text-purple-600 border-b-2 {% if app.request.get('_route') starts with 'app_lieu' %}border-purple-600 text-purple-600{% else %}border-transparent{% endif %} transition-colors">
                            Lieux
                        </a>
                        <a href="{{ path('app_site_index') }}"
                           class="px-3 py-2 text-sm font-medium text-gray-700 hover:text-purple-600 border-b-2 {% if app.request.get('_route') starts with 'app_site' %}border-purple-600 text-purple-600{% else %}border-transparent{% endif %} transition-colors">
                            Sites
                        </a>
                        <a href="{{ path('app_participant_index') }}"
                           class="px-3 py-2 text-sm font-medium text-gray-700 hover:text-purple-600 border-b-2 {% if app.request.get('_route') starts with 'app_participant' %}border-purple-600 text-purple-600{% else %}border-transparent{% endif %} transition-colors">
                            Administration
                        </a>
                    {% else %}
                        <a href="{{ path('app_lieu_index') }}"
                           class="px-3 py-2 text-sm font-medium text-gray-700 hover:text-purple-600 border-b-2 {% if app.request.get('_route') starts with 'app_lieu' %}border-purple-600 text-purple-600{% else %}border-transparent{% endif %} transition-colors">
                            Lieux
                        </a>
                        <a href="{{ path('app_sortie_index') }}"
                           class="px-3 py-2 text-sm font-medium text-gray-700 hover:text-purple-600 border-b-2 {% if app.request.get('_route') starts with 'app_sortie' %}border-purple-600 text-purple-600{% else %}border-transparent{% endif %} transition-colors">
                            Sorties
                        </a>
                        <a href="{{ path('app_ville_index') }}"
                           class="px-3 py-2 text-sm font-medium text-gray-700 hover:text-purple-600 border-b-2 {% if app.request.get('_route') starts with 'app_ville' %}border-purple-600 text-purple-600{% else %}border-transparent{% endif %} transition-colors">
                            Villes
                        </a>
                    {% endif %}

                </div>

                <!-- Actions utilisateur -->
                <div class="hidden md:flex md:items-center md:space-x-4">
                    {% if app.user %}
                        <div class="relative" x-data="{ open: false }">
                            <button @click="open = !open" class="flex items-center space-x-3 focus:outline-none">
                                <div class="w-10 h-10 rounded-full bg-purple-100 border-2 border-purple-600 flex items-center justify-center">
                                    <span class="text-sm font-medium text-purple-600">{{ app.user.prenom|first }}{{ app.user.nom|first }}</span>
                                </div>
                            </button>

                            <div x-show="open" @click.away="open = false"
                                 class="absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg py-1 border border-gray-100"
                                 x-transition:enter="transition ease-out duration-100"
                                 x-transition:enter-start="transform opacity-0 scale-95"
                                 x-transition:enter-end="transform opacity-100 scale-100">
                                <a href="{{ path('app_participant_show', {'id': app.user.id}) }}"
                                   class="block px-4 py-2 text-sm text-gray-700 hover:bg-purple-50 hover:text-purple-600">
                                    Mon profil
                                </a>
                                <a href="{{ path('app_logout') }}"
                                   class="block px-4 py-2 text-sm text-red-600 hover:bg-red-50">
                                    Déconnexion
                                </a>
                            </div>
                        </div>
                    {% else %}
                        <a href="{{ path('app_login') }}"
                           class="text-sm font-medium text-gray-700 hover:text-purple-600 transition-colors">
                            Connexion
                        </a>
                        <a href="{{ path('app_register') }}"
                           class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-purple-600 hover:bg-purple-700 transition-colors">
                            S'inscrire
                        </a>
                    {% endif %}
                </div>

                <!-- Menu mobile -->
                <div class="flex items-center md:hidden">
                    <button type="button" @click="mobileMenu = !mobileMenu"
                            class="inline-flex items-center justify-center p-2 rounded-md text-gray-700 hover:text-purple-600 hover:bg-purple-50">
                        <svg x-show="!mobileMenu" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
                        </svg>
                        <svg x-show="mobileMenu" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                        </svg>
                    </button>
                </div>
            </div>
        </div>

        <!-- Menu mobile -->
        <div x-show="mobileMenu" class="md:hidden border-t border-gray-100">
            <div class="pt-2 pb-4 space-y-1">
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_sortie_index') }}"
                       class="block pl-3 pr-4 py-2 text-base font-medium {% if app.request.get('_route') starts with 'app_sortie' %}text-purple-600 bg-purple-50{% else %}text-gray-700 hover:text-purple-600 hover:bg-purple-50{% endif %}">
                        Sorties
                    </a>
                    <a href="{{ path('app_ville_index') }}"
                       class="block pl-3 pr-4 py-2 text-base font-medium {% if app.request.get('_route') starts with 'app_ville' %}text-purple-600 bg-purple-50{% else %}text-gray-700 hover:text-purple-600 hover:bg-purple-50{% endif %}">
                        Villes
                    </a>
                    <a href="{{ path('app_site_index') }}"
                       class="block pl-3 pr-4 py-2 text-base font-medium {% if app.request.get('_route') starts with 'app_site' %}text-purple-600 bg-purple-50{% else %}text-gray-700 hover:text-purple-600 hover:bg-purple-50{% endif %}">
                        Sites
                    </a>
                    <a href="{{ path('app_lieu_index') }}"
                       class="block pl-3 pr-4 py-2 text-base font-medium {% if app.request.get('_route') starts with 'app_lieu' %}text-purple-600 bg-purple-50{% else %}text-gray-700 hover:text-purple-600 hover:bg-purple-50{% endif %}">
                        Lieux
                    </a>
                    <a href="{{ path('app_participant_index') }}"
                       class="block pl-3 pr-4 py-2 text-base font-medium {% if app.request.get('_route') starts with 'app_participant' %}text-purple-600 bg-purple-50{% else %}text-gray-700 hover:text-purple-600 hover:bg-purple-50{% endif %}">
                        Administration
                    </a>
                {% else %}
                    <a href="{{ path('app_sortie_index') }}"
                       class="block pl-3 pr-4 py-2 text-base font-medium {% if app.request.get('_route') starts with 'app_sortie' %}text-purple-600 bg-purple-50{% else %}text-gray-700 hover:text-purple-600 hover:bg-purple-50{% endif %}">
                        Sorties
                    </a>
                {% endif %}

                {% if app.user %}
                    <div class="border-t border-gray-100 pt-4">
                        <div class="flex items-center px-3">
                            <div class="w-10 h-10 rounded-full bg-purple-100 border-2 border-purple-600 flex items-center justify-center">
                                <span class="text-sm font-medium text-purple-600">{{ app.user.prenom|first }}{{ app.user.nom|first }}</span>
                            </div>
                            <div class="ml-3">
                                <div class="text-base font-medium text-gray-800">{{ app.user.prenom }} {{ app.user.nom }}</div>
                                <div class="text-sm font-medium text-gray-500">{{ app.user.email }}</div>
                            </div>
                        </div>
                        <div class="mt-3 space-y-1">
                            <a href="{{ path('app_participant_show', {'id': app.user.id}) }}"
                               class="block pl-3 pr-4 py-2 text-base font-medium text-gray-700 hover:text-purple-600 hover:bg-purple-50">
                                Mon profil
                            </a>
                            <a href="{{ path('app_logout') }}"
                               class="block pl-3 pr-4 py-2 text-base font-medium text-red-600 hover:bg-red-50">
                                Déconnexion
                            </a>
                        </div>
                    </div>
                {% else %}
                    <div class="border-t border-gray-100 pt-4">
                        <a href="{{ path('app_login') }}"
                           class="block pl-3 pr-4 py-2 text-base font-medium text-gray-700 hover:text-purple-600 hover:bg-purple-50">
                            Connexion
                        </a>
                        <a href="{{ path('app_register') }}"
                           class="block pl-3 pr-4 py-2 text-base font-medium text-purple-600 hover:bg-purple-50">
                            S'inscrire
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </nav>

    <!-- Espace pour éviter que le contenu ne passe sous la navbar fixe -->
    <div class="h-16"></div>
{% endif %}

{% block flash_messages %}
    <div class="container mx-auto px-4 mt-4">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="flash-message mb-4 rounded-xl p-4 animate-fade-in {% if label == 'success' %}bg-green-50 border border-green-200{% elseif label == 'error' %}bg-red-50 border border-red-200{% elseif label == 'warning' %}bg-yellow-50 border border-yellow-200{% else %}bg-blue-50 border border-blue-200{% endif %}">
                    <div class="flex items-start gap-3">
                        <p class="flex-1 text-sm">{{ message }}</p>
                        <button onclick="this.parentElement.parentElement.remove()" class="text-gray-400 hover:text-gray-500">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                            </svg>
                        </button>
                    </div>
                </div>
            {% endfor %}
        {% endfor %}
    </div>
{% endblock %}

<main class="flex-1">
    {% block body %}{% endblock %}
</main>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const flashMessages = document.querySelectorAll('.flash-message');
        flashMessages.forEach(function(message) {
            setTimeout(function() {
                message.style.opacity = '0';
                message.style.transform = 'translateY(-20px)';
                message.style.transition = 'all 0.3s ease-out';
                setTimeout(function() {
                    message.remove();
                }, 300);
            }, 5000);
        });
    });
</script>

<style>
    @keyframes fade-in {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    .animate-fade-in {
        animation: fade-in 0.3s ease-out forwards;
    }
</style>
</body>
</html>
