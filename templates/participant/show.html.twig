{% extends 'base.html.twig' %}

{% block title %}Profil du participant{% endblock %}

{% block body %}
    <section class="py-10 my-auto dark:bg-gray-900">
        <div class="lg:w-[80%] md:w-[90%] w-[96%] mx-auto flex gap-4">
            <div class="lg:w-[88%] sm:w-[88%] w-full mx-auto shadow-2xl p-6 rounded-xl h-fit self-center dark:bg-gray-800/40">

                <div class="flex justify-between items-center mb-6">
                    <div>
                        <h1 class="lg:text-3xl md:text-2xl text-xl font-serif font-extrabold dark:text-white">
                            Profil de {{ participant.prenom }} {{ participant.nom }}
                        </h1>
                        <p class="text-gray-500 text-sm dark:text-gray-400">Informations du participant</p>
                    </div>

                </div>

                <div class="w-full py-16 rounded-lg bg-[url('https://images.unsplash.com/photo-1449844908441-8829872d2607?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&q=80&w=1080')] bg-cover bg-center bg-no-repeat mb-4"></div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Prénom</label>
                        <input type="text" value="{{ participant.prenom }}" disabled
                               class="mt-2 px-4 py-2 w-full border-2 rounded-lg bg-gray-100 dark:bg-gray-700 dark:text-gray-200 border-gray-300 cursor-not-allowed" />
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Nom</label>
                        <input type="text" value="{{ participant.nom }}" disabled
                               class="mt-2 px-4 py-2 w-full border-2 rounded-lg bg-gray-100 dark:bg-gray-700 dark:text-gray-200 border-gray-300 cursor-not-allowed" />
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Email</label>
                        <input type="email" value="{{ participant.email }}" disabled
                               class="mt-2 px-4 py-2 w-full border-2 rounded-lg bg-gray-100 dark:bg-gray-700 dark:text-gray-200 border-gray-300 cursor-not-allowed" />
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Téléphone</label>
                        <input type="text" value="{{ participant.telephone }}" disabled
                               class="mt-2 px-4 py-2 w-full border-2 rounded-lg bg-gray-100 dark:bg-gray-700 dark:text-gray-200 border-gray-300 cursor-not-allowed" />
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Mot de passe</label>
                        <input type="password" value="********" disabled
                               class="mt-2 px-4 py-2 w-full border-2 rounded-lg bg-gray-100 dark:bg-gray-700 dark:text-gray-200 border-gray-300 cursor-not-allowed" />
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Rôles</label>
                        <input type="text" value="{{ participant.roles ? participant.roles|join(', ') : 'Aucun' }}" disabled
                               class="mt-2 px-4 py-2 w-full border-2 rounded-lg bg-gray-100 dark:bg-gray-700 dark:text-gray-200 border-gray-300 cursor-not-allowed" />
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Administrateur</label>
                        <input type="text" value="{{ participant.administrateur ? 'Oui' : 'Non' }}" disabled
                               class="mt-2 px-4 py-2 w-full border-2 rounded-lg bg-gray-100 dark:bg-gray-700 dark:text-gray-200 border-gray-300 cursor-not-allowed" />
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Actif</label>
                        <input type="text" value="{{ participant.actif ? 'Oui' : 'Non' }}" disabled
                               class="mt-2 px-4 py-2 w-full border-2 rounded-lg bg-gray-100 dark:bg-gray-700 dark:text-gray-200 border-gray-300 cursor-not-allowed" />
                    </div>
                </div>

                <div class="mt-8 flex justify-between">
                    <a href="{{ path('app_participant_index') }}"
                       class="text-purple-600 font-semibold hover:underline">
                        ← Retour à la liste
                    </a>

                    <a href="{{ path('app_participant_edit', {'id': participant.id}) }}"
                       class="px-4 py-2 bg-purple-300 text-purple-600 rounded-lg hover:bg-purple-400 transition">
                        Modifier
                    </a>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
