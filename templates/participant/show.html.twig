{# templates/participant/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}{{ participant.prenom }} {{ participant.nom }}{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gradient-to-br from-gray-50 to-white py-12">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
            <!-- Carte principale -->
            <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden">
                <!-- En-tête avec bannière -->
                <div class="relative h-48 bg-gradient-to-r from-purple-600 to-purple-700">
                    <!-- Cercles décoratifs -->
                    <div class="absolute top-0 right-0 -translate-y-1/2 translate-x-1/2 w-64 h-64 bg-purple-500 rounded-full opacity-20"></div>
                    <div class="absolute bottom-0 left-0 translate-y-1/2 -translate-x-1/2 w-32 h-32 bg-purple-500 rounded-full opacity-20"></div>

                    <!-- Avatar avec initiales -->
                    <div class="absolute -bottom-16 left-8">
                        <div class="w-32 h-32 rounded-full border-4 border-white shadow-lg bg-purple-100 flex items-center justify-center">
                        <span class="text-4xl text-purple-600 font-medium">
                            {{ participant.prenom|first|upper }}{{ participant.nom|first|upper }}
                        </span>
                        </div>
                    </div>
                </div>

                <!-- Informations principales -->
                <div class="pt-20 px-8 pb-8">
                    <div class="flex justify-between items-start mb-6">
                        <div>
                            <h1 class="text-2xl font-bold text-gray-900">
                                {{ participant.prenom }} {{ participant.nom }}
                                {% if participant.administrateur %}
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800 ml-2">
                                    Admin
                                </span>
                                {% endif %}
                            </h1>
                            <p class="text-gray-500 mt-1">{{ participant.email }}</p>
                        </div>

                        <div class="flex space-x-3">
                            <a href="{{ path('app_participant_edit', {'id': participant.id}) }}"
                               class="inline-flex items-center px-4 py-2 bg-purple-50 text-purple-700 rounded-lg hover:bg-purple-100 transition-colors duration-200">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                </svg>
                                Modifier
                            </a>
                            {{ include('participant/_delete_form.html.twig', {
                                'button_class': 'inline-flex items-center px-4 py-2 bg-red-50 text-red-700 rounded-lg hover:bg-red-100 transition-colors duration-200'
                            }) }}
                        </div>
                    </div>

                    <!-- Grille d'informations -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="space-y-6">
                            <!-- Informations personnelles -->
                            <div class="bg-gray-50 rounded-xl p-6">
                                <h3 class="text-sm font-medium text-gray-500 mb-4">Informations personnelles</h3>
                                <div class="space-y-4">
                                    <div>
                                        <label class="text-xs text-gray-500">Téléphone</label>
                                        <p class="text-gray-900">{{ participant.telephone ?: 'Non renseigné' }}</p>
                                    </div>
                                    <div>
                                        <label class="text-xs text-gray-500">Site rattaché</label>
                                        <p class="text-gray-900">{{ participant.site ? participant.site.nom : 'Non assigné' }}</p>
                                    </div>
                                </div>
                            </div>

                            <!-- Statut du compte -->
                            <div class="bg-gray-50 rounded-xl p-6">
                                <h3 class="text-sm font-medium text-gray-500 mb-4">Statut du compte</h3>
                                <div class="space-y-3">
                                    <div class="flex items-center space-x-2">
                                        <div class="w-3 h-3 rounded-full {{ participant.actif ? 'bg-green-400' : 'bg-red-400' }}"></div>
                                        <span class="text-sm text-gray-700">{{ participant.actif ? 'Compte actif' : 'Compte inactif' }}</span>
                                    </div>
                                    <div class="flex items-center space-x-2">
                                        <div class="w-3 h-3 rounded-full {{ participant.administrateur ? 'bg-purple-400' : 'bg-gray-400' }}"></div>
                                        <span class="text-sm text-gray-700">{{ participant.administrateur ? 'Administrateur' : 'Utilisateur standard' }}</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="space-y-6">
                            <!-- Rôles et permissions -->
                            <div class="bg-gray-50 rounded-xl p-6">
                                <h3 class="text-sm font-medium text-gray-500 mb-4">Rôles et permissions</h3>
                                <div class="space-y-2">
                                    {% for role in participant.roles %}
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                        {{ role }}
                                    </span>
                                    {% endfor %}
                                </div>
                            </div>

                            <!-- Statistiques -->
                            <div class="bg-gray-50 rounded-xl p-6">
                                <h3 class="text-sm font-medium text-gray-500 mb-4">Statistiques</h3>
                                <div class="grid grid-cols-2 gap-4">
                                    <div class="bg-white rounded-lg p-4 text-center">
                                        <span class="text-2xl font-bold text-purple-600">0</span>
                                        <p class="text-xs text-gray-500 mt-1">Sorties créées</p>
                                    </div>
                                    <div class="bg-white rounded-lg p-4 text-center">
                                        <span class="text-2xl font-bold text-purple-600">0</span>
                                        <p class="text-xs text-gray-500 mt-1">Participations</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Breadcrumb -->
            <div class="mt-6 flex justify-center">
                <nav class="flex items-center space-x-3 text-sm text-gray-500">
                    <a href="{{ path('app_participant_index') }}" class="hover:text-purple-600 transition-colors">Participants</a>
                    <span class="text-gray-300">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
                    </svg>
                </span>
                    <span class="text-gray-400">Profil</span>
                </nav>
            </div>
        </div>
    </div>
{% endblock %}
