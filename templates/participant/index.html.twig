{# templates/participant/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Administration des participants{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gradient-to-br from-gray-50 to-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4 sm:py-12">
            <!-- En-tête -->
            <div class="mb-6 sm:mb-8">
                <div class="flex flex-col sm:flex-row sm:justify-between sm:items-start gap-4">
                    <div>
                        <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Administration</h1>
                        <p class="mt-1 sm:mt-2 text-sm text-gray-600">Gérez tous les participants de la plateforme</p>
                    </div>
                    <div class="flex flex-col sm:flex-row gap-2 sm:gap-3">
                        <!-- Bouton Import CSV avec upload direct -->
                        <form action="{{ path('app_participant_import_csv') }}"
                              method="post"
                              enctype="multipart/form-data"
                              class="w-full sm:w-auto">

                            <input type="hidden" name="_token" value="{{ csrf_token('import_csv') }}">

                            <label class="w-full sm:w-auto inline-flex items-center justify-center px-4 py-2.5 sm:py-2 bg-gradient-to-r from-blue-600 to-blue-700 text-white text-sm font-medium rounded-lg hover:from-blue-700 hover:to-blue-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200 shadow-sm hover:shadow-md group cursor-pointer">
                                <svg class="w-5 h-5 mr-2 group-hover:scale-110 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
                                </svg>
                                Importer CSV
                                <input type="file"
                                       name="csv_file"
                                       accept=".csv,text/csv,text/plain"
                                       class="hidden"
                                       onchange="this.form.submit()">
                            </label>
                        </form>

                        <!-- Bouton Nouveau participant -->
                        <a href="{{ path('app_participant_new') }}"
                           class="w-full sm:w-auto inline-flex items-center justify-center px-4 py-2.5 sm:py-2 bg-gradient-to-r from-purple-600 to-purple-700 text-white text-sm font-medium rounded-lg hover:from-purple-700 hover:to-purple-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-all duration-200 shadow-sm hover:shadow-md group">
                            <svg class="w-5 h-5 mr-2 group-hover:rotate-90 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                            </svg>
                            Nouveau participant
                        </a>
                    </div>
                </div>

                <!-- Filtres et recherche -->
                <div class="mt-6 sm:mt-8 flex flex-col sm:flex-row gap-4">
                    <div class="flex-1 flex flex-col sm:flex-row gap-4">
                        <div class="w-full sm:w-36">
                            <label for="perPage" class="block text-xs font-medium text-gray-700 mb-1">Afficher</label>
                            <select id="perPage" class="w-full rounded-lg border-gray-300 text-gray-700 text-sm focus:ring-purple-500 focus:border-purple-500">
                                <option>10</option>
                                <option>25</option>
                                <option>50</option>
                                <option>100</option>
                            </select>
                        </div>
                        <div class="w-full sm:w-48">
                            <label for="status" class="block text-xs font-medium text-gray-700 mb-1">Statut</label>
                            <select id="status" class="w-full rounded-lg border-gray-300 text-gray-700 text-sm focus:ring-purple-500 focus:border-purple-500">
                                <option>Tous les statuts</option>
                                <option>Actif uniquement</option>
                                <option>Inactif uniquement</option>
                            </select>
                        </div>
                    </div>
                    <div class="flex-1">
                        <label for="search" class="block text-xs font-medium text-gray-700 mb-1">Rechercher</label>
                        <div class="relative">
                            <input type="text" id="search"
                                   class="w-full rounded-lg border-gray-300 pl-10 text-sm focus:ring-purple-500 focus:border-purple-500"
                                   placeholder="Rechercher un participant...">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg class="h-4 w-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                                </svg>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Vue Desktop - Table -->
            <div class="hidden md:block bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead>
                    <tr class="bg-gray-50">
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Utilisateur</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Site</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Contact</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Statut</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Rôle</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                    {% for participant in participants %}
                        <tr class="hover:bg-gray-50 transition-colors duration-200">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center">
                                    <div class="h-10 w-10 flex-shrink-0">
                                        {% if participant.photoProfil %}
                                            <img src="{{ asset('images/profils/' ~ participant.photoProfil) }}"
                                                 alt="{{ participant.prenom }} {{ participant.nom }}"
                                                 class="h-10 w-10 rounded-full object-cover border-2 border-purple-100">
                                        {% else %}
                                            <div class="h-10 w-10 rounded-full bg-purple-100 flex items-center justify-center">
                                                <span class="text-purple-600 font-medium text-sm">
                                                    {{ participant.prenom|first|upper }}{{ participant.nom|first|upper }}
                                                </span>
                                            </div>
                                        {% endif %}
                                    </div>
                                    <div class="ml-4">
                                        <div class="text-sm font-medium text-gray-900">
                                            {{ participant.prenom }} {{ participant.nom }}
                                        </div>
                                        <div class="text-sm text-gray-500">{{ participant.email }}</div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-900">{{ participant.site ? participant.site.nom : '-' }}</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-900">{{ participant.telephone ?: '-' }}</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                {% if participant.actif %}
                                    <span class="px-2.5 py-1 text-xs font-medium rounded-full bg-green-100 text-green-800">
                                    Actif
                                </span>
                                {% else %}
                                    <span class="px-2.5 py-1 text-xs font-medium rounded-full bg-red-100 text-red-800">
                                    Inactif
                                </span>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                {% if participant.administrateur %}
                                    <span class="px-2.5 py-1 text-xs font-medium rounded-full bg-purple-100 text-purple-800">
                                    Administrateur
                                </span>
                                {% else %}
                                    <span class="px-2.5 py-1 text-xs font-medium rounded-full bg-gray-100 text-gray-800">
                                    Utilisateur
                                </span>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                <div class="flex items-center space-x-4">
                                    <a href="{{ path('app_participant_show', {'id': participant.id}) }}"
                                       class="text-gray-400 hover:text-purple-600 transition-colors duration-200">
                                        <span class="sr-only">Voir</span>
                                        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                                        </svg>
                                    </a>
                                    <a href="{{ path('app_participant_edit', {'id': participant.id}) }}"
                                       class="text-gray-400 hover:text-purple-600 transition-colors duration-200">
                                        <span class="sr-only">Modifier</span>
                                        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                        </svg>
                                    </a>
                                    {{ include('participant/_delete_form.html.twig', {
                                        'button_class': 'text-gray-400 hover:text-red-600 transition-colors duration-200 inline-flex items-center',
                                        'participant': participant
                                    }) }}
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="px-6 py-12 text-center">
                                <div class="flex flex-col items-center">
                                    <svg class="w-12 h-12 text-gray-300 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                                    </svg>
                                    <p class="text-gray-500">Aucun participant trouvé</p>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <!-- Pagination Desktop -->
                <div class="bg-white px-6 py-4 border-t border-gray-200">
                    <div class="flex items-center justify-between">
                        <div class="text-sm text-gray-700">
                            Affichage de <span class="font-medium">{{ participants|length }}</span> participants
                        </div>
                        <div class="flex space-x-2">
                            <button class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 transition-colors duration-200">
                                Précédent
                            </button>
                            <button class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 transition-colors duration-200">
                                Suivant
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Vue Mobile - Cards -->
            <div class="md:hidden space-y-4">
                {% for participant in participants %}
                    <div class="bg-white rounded-xl shadow-md border border-gray-100 overflow-hidden">
                        <div class="p-4">
                            <!-- En-tête avec photo et infos -->
                            <div class="flex items-start gap-3 mb-3">
                                <div class="flex-shrink-0">
                                    {% if participant.photoProfil %}
                                        <img src="{{ asset('images/profils/' ~ participant.photoProfil) }}"
                                             alt="{{ participant.prenom }} {{ participant.nom }}"
                                             class="h-14 w-14 rounded-full object-cover border-2 border-purple-100">
                                    {% else %}
                                        <div class="h-14 w-14 rounded-full bg-purple-100 flex items-center justify-center">
                                            <span class="text-purple-600 font-semibold text-lg">
                                                {{ participant.prenom|first|upper }}{{ participant.nom|first|upper }}
                                            </span>
                                        </div>
                                    {% endif %}
                                </div>
                                <div class="flex-1 min-w-0">
                                    <h3 class="text-base font-semibold text-gray-900 truncate">
                                        {{ participant.prenom }} {{ participant.nom }}
                                    </h3>
                                    <p class="text-sm text-gray-500 truncate">{{ participant.email }}</p>
                                    <div class="flex items-center gap-2 mt-2 flex-wrap">
                                        {% if participant.actif %}
                                            <span class="px-2 py-0.5 text-xs font-medium rounded-full bg-green-100 text-green-800">
                                                Actif
                                            </span>
                                        {% else %}
                                            <span class="px-2 py-0.5 text-xs font-medium rounded-full bg-red-100 text-red-800">
                                                Inactif
                                            </span>
                                        {% endif %}
                                        {% if participant.administrateur %}
                                            <span class="px-2 py-0.5 text-xs font-medium rounded-full bg-purple-100 text-purple-800">
                                                Admin
                                            </span>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>

                            <!-- Informations supplémentaires -->
                            <div class="space-y-2 mb-3 pb-3 border-b border-gray-100">
                                {% if participant.site %}
                                    <div class="flex items-center text-sm">
                                        <svg class="w-4 h-4 text-gray-400 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                                        </svg>
                                        <span class="text-gray-700">{{ participant.site.nom }}</span>
                                    </div>
                                {% endif %}
                                {% if participant.telephone %}
                                    <div class="flex items-center text-sm">
                                        <svg class="w-4 h-4 text-gray-400 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                                        </svg>
                                        <span class="text-gray-700">{{ participant.telephone }}</span>
                                    </div>
                                {% endif %}
                            </div>

                            <!-- Actions -->
                            <div class="flex items-center gap-2">
                                <a href="{{ path('app_participant_show', {'id': participant.id}) }}"
                                   class="flex-1 inline-flex items-center justify-center px-3 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 text-sm font-medium rounded-lg transition-colors duration-200">
                                    <svg class="w-4 h-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                                    </svg>
                                    Voir
                                </a>
                                <a href="{{ path('app_participant_edit', {'id': participant.id}) }}"
                                   class="flex-1 inline-flex items-center justify-center px-3 py-2 bg-purple-600 hover:bg-purple-700 text-white text-sm font-medium rounded-lg transition-colors duration-200">
                                    <svg class="w-4 h-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                    </svg>
                                    Modifier
                                </a>
                                <div class="flex items-center">
                                    {{ include('participant/_delete_form.html.twig', {
                                        'button_class': 'inline-flex items-center justify-center p-2 bg-red-50 hover:bg-red-100 text-red-600 hover:text-red-700 rounded-lg transition-colors duration-200',
                                        'participant': participant
                                    }) }}
                                </div>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="bg-white rounded-xl shadow-md border border-gray-100 p-12">
                        <div class="flex flex-col items-center text-center">
                            <svg class="w-16 h-16 text-gray-300 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                            </svg>
                            <p class="text-gray-500 font-medium mb-2">Aucun participant trouvé</p>
                            <p class="text-sm text-gray-400 mb-4">Commencez par ajouter un participant</p>
                            <a href="{{ path('app_participant_new') }}"
                               class="inline-flex items-center px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white text-sm font-medium rounded-lg transition-colors duration-200">
                                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                                </svg>
                                Nouveau participant
                            </a>
                        </div>
                    </div>
                {% endfor %}

                <!-- Pagination Mobile -->
                {% if participants|length > 0 %}
                    <div class="bg-white rounded-xl shadow-md border border-gray-100 p-4">
                        <p class="text-sm text-gray-600 text-center mb-3">
                            {{ participants|length }} participant(s) au total
                        </p>
                        <div class="flex items-center gap-2">
                            <button class="flex-1 inline-flex items-center justify-center px-4 py-2.5 bg-white text-sm font-medium text-gray-700 hover:text-purple-600 hover:border-purple-300 border border-gray-300 rounded-lg shadow-sm transition-all duration-200">
                                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                                </svg>
                                Préc.
                            </button>
                            <button class="flex-1 inline-flex items-center justify-center px-4 py-2.5 bg-white text-sm font-medium text-gray-700 hover:text-purple-600 hover:border-purple-300 border border-gray-300 rounded-lg shadow-sm transition-all duration-200">
                                Suiv.
                                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                                </svg>
                            </button>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
