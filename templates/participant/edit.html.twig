{# templates/participant/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Modifier {{ participant.prenom }} {{ participant.nom }}{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gradient-to-br from-gray-50 to-white py-12">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden">
                <!-- En-tête -->
                <div class="relative overflow-hidden px-8 py-6 bg-gradient-to-r from-purple-600 to-purple-700 text-white">
                    <div class="relative z-10">
                        <div class="flex items-center justify-between">
                            <h1 class="text-2xl font-semibold">Modifier le profil</h1>
                            <span class="inline-flex items-center px-3 py-1 rounded-full bg-white/20 backdrop-blur-sm text-sm">
                                Édition
                            </span>
                        </div>
                        <p class="mt-2 text-purple-100 text-sm">Modifier les informations de {{ participant.prenom }} {{ participant.nom }}</p>
                    </div>
                    <div class="absolute top-0 right-0 -translate-y-1/2 translate-x-1/2 w-64 h-64 bg-purple-500 rounded-full opacity-20"></div>
                    <div class="absolute bottom-0 left-0 translate-y-1/2 -translate-x-1/2 w-32 h-32 bg-purple-500 rounded-full opacity-20"></div>
                </div>

                <!-- Formulaire -->
                <div class="p-8">
                    {{ form_start(form, {'attr': {'class': 'space-y-6', 'enctype': 'multipart/form-data'}}) }}
                    {{ form_errors(form) }}

                    <!-- Photo de profil -->
                    <div class="flex items-center space-x-6 pb-6 border-b border-gray-100">
                        <div class="flex-shrink-0">
                            {% if participant.photoProfil %}
                                <img src="{{ asset('images/profils/' ~ participant.photoProfil) }}"
                                     alt="Photo de profil"
                                     class="h-16 w-16 rounded-full object-cover border-2 border-purple-100 shadow-sm">
                            {% else %}
                                <div class="h-16 w-16 rounded-full bg-purple-100 flex items-center justify-center">
                                    <svg class="h-7 w-7 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
                                    </svg>
                                </div>
                            {% endif %}
                        </div>
                        <div class="flex-1">
                            {{ form_label(form.photoProfilFile, 'Photo de profil', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                            {{ form_widget(form.photoProfilFile, {'attr': {
                                'class': 'block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-medium file:bg-purple-50 file:text-purple-700 hover:file:bg-purple-100 cursor-pointer'
                            }}) }}
                            {{ form_errors(form.photoProfilFile) }}
                            <p class="mt-1 text-xs text-gray-500">JPG, PNG ou GIF (max. 2 Mo)</p>

                            {% if participant.photoProfil %}
                                <label class="mt-3 inline-flex items-center group cursor-pointer">
                                    <input
                                        type="checkbox"
                                        name="delete_photo"
                                        value="1"
                                        class="peer sr-only"
                                    >
                                    <div class="relative w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-red-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-red-600"></div>
                                    <span class="ml-3 text-sm font-medium text-gray-700 group-hover:text-red-600 transition-colors">Supprimer la photo</span>
                                </label>
                            {% endif %}
                        </div>
                    </div>



                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Prénom -->
                        <div>
                            {{ form_label(form.prenom, 'Prénom *', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                            {{ form_widget(form.prenom, {'attr': {
                                'class': 'block w-full px-4 h-11 text-gray-700 bg-gray-50 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-600 focus:border-purple-600 transition-colors duration-200'
                            }}) }}
                            {{ form_errors(form.prenom) }}
                        </div>

                        <!-- Nom -->
                        <div>
                            {{ form_label(form.nom, 'Nom *', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                            {{ form_widget(form.nom, {'attr': {
                                'class': 'block w-full px-4 h-11 text-gray-700 bg-gray-50 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-600 focus:border-purple-600 transition-colors duration-200'
                            }}) }}
                            {{ form_errors(form.nom) }}
                        </div>

                        <!-- Email -->
                        <div>
                            {{ form_label(form.email, 'Email *', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                            {{ form_widget(form.email, {'attr': {
                                'class': 'block w-full px-4 h-11 text-gray-700 bg-gray-50 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-600 focus:border-purple-600 transition-colors duration-200'
                            }}) }}
                            {{ form_errors(form.email) }}
                        </div>

                        <!-- Email -->
                        <div>
                            {{ form_label(form.pseudo, 'Pseudo *', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                            {{ form_widget(form.pseudo, {'attr': {
                                'class': 'block w-full px-4 h-11 text-gray-700 bg-gray-50 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-600 focus:border-purple-600 transition-colors duration-200'
                            }}) }}
                            {{ form_errors(form.pseudo) }}
                        </div>

                        <!-- Téléphone -->
                        <div>
                            {{ form_label(form.telephone, 'Téléphone', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                            {{ form_widget(form.telephone, {'attr': {
                                'class': 'block w-full px-4 h-11 text-gray-700 bg-gray-50 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-600 focus:border-purple-600 transition-colors duration-200'
                            }}) }}
                            {{ form_errors(form.telephone) }}
                        </div>

                        <!-- Site -->
                        <div>
                            {{ form_label(form.site, 'Site *', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                            {{ form_widget(form.site, {'attr': {
                                'class': 'block w-full px-4 h-11 text-gray-700 bg-gray-50 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-600 focus:border-purple-600 transition-colors duration-200'
                            }}) }}
                            {{ form_errors(form.site) }}
                        </div>
                    </div>

                    <!-- Options du compte (design moderne) -->
                    <div class="space-y-4 pt-6 border-t border-gray-100">
                        <h3 class="text-sm font-medium text-gray-700 mb-4">Options du compte</h3>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            {% if is_granted('ROLE_ADMIN') %}
                                <!-- Toggle Administrateur -->
                                <div class="bg-gradient-to-br from-purple-50 to-purple-100 rounded-xl p-4 border border-purple-200">
                                    <div class="flex items-center justify-between">
                                        <div class="flex items-center space-x-3">
                                            <div class="w-10 h-10 bg-purple-200 rounded-lg flex items-center justify-center">
                                                <svg class="w-5 h-5 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
                                                    <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
                                                    <path d="M13 7a1 1 0 11-2 0 1 1 0 012 0z"/>
                                                </svg>
                                            </div>
                                            <div>
                                                <p class="text-sm font-medium text-gray-900">Administrateur</p>
                                                <p class="text-xs text-gray-600">Droits d'administration</p>
                                            </div>
                                        </div>
                                        <label class="relative inline-flex items-center cursor-pointer">
                                            {{ form_widget(form.administrateur, {'attr': {
                                                'class': 'sr-only peer'
                                            }}) }}
                                            <div class="w-11 h-6 bg-gray-300 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-purple-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-purple-600"></div>
                                        </label>
                                    </div>
                                    {{ form_errors(form.administrateur) }}
                                </div>
                            {% endif %}

                            <!-- Toggle Compte actif -->
                            <div id="actif-toggle" class="transition-all duration-300 rounded-xl p-4 border {{ form.actif.vars.data ? 'bg-gradient-to-br from-green-50 to-green-100 border-green-200' : 'bg-gradient-to-br from-red-50 to-red-100 border-red-200' }}">
                                <div class="flex items-center justify-between">
                                    <div class="flex items-center space-x-3">
                                        <div id="actif-icon" class="transition-colors duration-300 w-10 h-10 rounded-lg flex items-center justify-center {{ form.actif.vars.data ? 'bg-green-200' : 'bg-red-200' }}">
                                            <svg id="actif-svg" class="transition-colors duration-300 w-5 h-5 {{ form.actif.vars.data ? 'text-green-600' : 'text-red-600' }}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                {% if form.actif.vars.data %}
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                                {% else %}
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                                {% endif %}
                                            </svg>
                                        </div>
                                        <div>
                                            <p id="actif-title" class="text-sm font-medium text-gray-900">{{ form.actif.vars.data ? 'Compte actif' : 'Compte inactif' }}</p>
                                            <p id="actif-desc" class="text-xs text-gray-600">{{ form.actif.vars.data ? 'Autoriser l\'accès' : 'Bloquer l\'accès' }}</p>
                                        </div>
                                    </div>
                                    <label class="relative inline-flex items-center cursor-pointer">
                                        {{ form_widget(form.actif, {'attr': {
                                            'class': 'sr-only peer',
                                            'onchange': 'toggleActifState(this)'
                                        }}) }}
                                        <div id="actif-switch" class="transition-colors duration-300 w-11 h-6 peer-focus:outline-none peer-focus:ring-4 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all {{ form.actif.vars.data ? 'bg-green-600 peer-focus:ring-green-300' : 'bg-red-600 peer-focus:ring-red-300' }}"></div>
                                    </label>
                                </div>
                                {{ form_errors(form.actif) }}
                            </div>
                        </div>
                    </div>

                    <!-- Actions -->
                    <div class="flex items-center justify-between space-x-4 mt-8 pt-6 border-t border-gray-100">
                        <a href="{{ path('app_participant_index') }}"
                           class="inline-flex items-center px-4 h-10 border border-gray-300 rounded-lg text-sm text-gray-700 bg-white hover:bg-gray-50 hover:text-purple-600 transition-colors duration-200">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                            </svg>
                            Retour
                        </a>

                        <button type="submit"
                                class="inline-flex items-center px-6 h-10 bg-purple-600 text-white text-sm font-medium rounded-lg hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-colors duration-200">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                            </svg>
                            Enregistrer
                        </button>
                    </div>

                    {{ form_row(form._token) }}
                    {{ form_end(form, {'render_rest': false}) }}
                </div>
            </div>

            <!-- Breadcrumb -->
            <div class="mt-6 flex justify-center">
                <nav class="flex items-center space-x-3 text-sm text-gray-500">
                    <a href="{{ path('app_participant_index') }}" class="hover:text-purple-600 transition-colors">Participants</a>
                    <span class="text-gray-300">
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
                        </svg>
                    </span>
                    <span class="text-gray-400">Modifier</span>
                </nav>
            </div>
        </div>
    </div>

    <script>

        function toggleActifState(checkbox) {
            const container = document.getElementById('actif-toggle');
            const icon = document.getElementById('actif-icon');
            const svg = document.getElementById('actif-svg');
            const title = document.getElementById('actif-title');
            const desc = document.getElementById('actif-desc');
            const switchElement = document.getElementById('actif-switch');

            if (checkbox.checked) {
                // État actif (vert) avec icône checkmark
                container.className = 'transition-all duration-300 rounded-xl p-4 border bg-gradient-to-br from-green-50 to-green-100 border-green-200';
                icon.className = 'transition-colors duration-300 w-10 h-10 rounded-lg flex items-center justify-center bg-green-200';
                svg.className = 'transition-colors duration-300 w-5 h-5 text-green-600';
                svg.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>';
                title.textContent = 'Compte actif';
                desc.textContent = 'Autoriser l\'accès';
                switchElement.className = 'transition-colors duration-300 w-11 h-6 peer-focus:outline-none peer-focus:ring-4 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[\'\'] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all bg-green-600 peer-focus:ring-green-300';
            } else {
                // État inactif (rouge) avec icône croix
                container.className = 'transition-all duration-300 rounded-xl p-4 border bg-gradient-to-br from-red-50 to-red-100 border-red-200';
                icon.className = 'transition-colors duration-300 w-10 h-10 rounded-lg flex items-center justify-center bg-red-200';
                svg.className = 'transition-colors duration-300 w-5 h-5 text-red-600';
                svg.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"/>';
                title.textContent = 'Compte inactif';
                desc.textContent = 'Bloquer l\'accès';
                switchElement.className = 'transition-colors duration-300 w-11 h-6 peer-focus:outline-none peer-focus:ring-4 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[\'\'] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all bg-red-600 peer-focus:ring-red-300';
            }
        }

    </script>

{% endblock %}
